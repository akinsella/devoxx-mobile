

.calendar{
	margin:0px 10px 10px 0px;
	padding-top:5px;
	float:left;
	width:60px;
	background:#ededef;
	background: -webkit-gradient(linear, left top, left bottom, from(#ededef), to(#ccc));
	background: -moz-linear-gradient(top,  #ededef,  #ccc);
	font:bold 30px/40px Arial Black, Arial, Helvetica, sans-serif;
	text-align:center;
	color:#000;
	text-shadow:#fff 0 1px 0;
	-moz-border-radius:3px;
	-webkit-border-radius:3px;
	border-radius:3px;
	position:relative;
	-moz-box-shadow:0 1px 1px #888;
	-webkit-box-shadow:0 1px 1px #888;
	box-shadow:0 1px 1px #888;
}

.calendar em {
	display:block;
	font:normal bold 12px/20px Arial, Helvetica, sans-serif;
	color:#fff;
	text-shadow:#00365a 0 -1px 0;
	background:#55175A;
	background:-webkit-gradient(linear, left top, left bottom, from(#814273), to(#55175A));
	background:-moz-linear-gradient(top,  #814273,  #55175A);
	-moz-border-radius-bottomright:3px;
	-webkit-border-bottom-right-radius:3px;
	border-bottom-right-radius:3px;
	-moz-border-radius-bottomleft:3px;
	-webkit-border-bottom-left-radius:3px;
	border-bottom-left-radius:3px;
	border-top:1px solid #00365a;
}

.calendar:before, .calendar:after{
	content:'';
	float:left;
	position:absolute;
	top:5px;
	width:8px;
	height:8px;
	background:#111;
	z-index:1;
	-moz-border-radius:10px;
	-webkit-border-radius:10px;
	border-radius:10px;
	-moz-box-shadow:0 1px 1px #fff;
	-webkit-box-shadow:0 1px 1px #fff;
	box-shadow:0 1px 1px #fff;
}

.calendar:before {
    left:8px;
}
.calendar:after {
    right:8px;
}

.calendar em:before, .calendar em:after{
	content:'';
	float:left;
	position:absolute;
	top:-5px;
	width:4px;
	height:14px;
	background:#dadada;
	background:-webkit-gradient(linear, left top, left bottom, from(#f1f1f1), to(#aaa));
	background:-moz-linear-gradient(top,  #f1f1f1,  #aaa);
	z-index:2;
	-moz-border-radius:2px;
	-webkit-border-radius:2px;
	border-radius:2px;
}

.calendar em:before {
    left:10px;
}

.calendar em:after {
    right:10px;
}

div.calendar-item {
    width: 60px;
    height: 66px;

    border: solid #c0c0c0 1px;

    padding: 20px 20px 20px 20px;

    background: #f6f6f6;
   	background: -webkit-gradient(linear, left top, left bottom, from(#fafafa), to(#ededed));
    background: -webkit-linear-gradient(top,  #fafafa,  #ededed);
    background: -moz-linear-gradient(top,  #fafafa,  #ededed);
    background: -o-linear-gradient(top,  #fafafa,  #ededed);
    background: -ms-linear-gradient(top,  #fafafa,  #ededed);
    background: linear-gradient(top,  #fafafa,  #ededed);


    -webkit-border-radius: 10px;
    -moz-border-radius: 10px;
    -o-border-radius: 10px;
    -ms-border-radius: 10px;
    border-radius: 10px;

    -webkit-box-shadow: 1px 1px 2px #bbb;
    -moz-box-shadow: 1px 1px 2px #bbb;
    -o-box-shadow: 1px 1px 2px #bbb;
    -ms-box-shadow: 1px 1px 2px #bbb;
    box-shadow: 1px 1px 2px #bbb;

   	cursor: pointer;
}

a.calendar-item {
    text-decoration: none;
}

div.calendar-item:hover {
    border: solid #c0c0c0 1px;

    background: #e0e0e0;
    background: -webkit-gradient(linear, left top, left bottom, from(#f8f8f8), to(#dddddd));
   	background: -webkit-linear-gradient(top,  #f8f8f8,  #dddddd);
    background: -moz-linear-gradient(top,  #f8f8f8,  #dddddd);
    background: -o-linear-gradient(top,  #f8f8f8,  #dddddd);
    background: -ms-linear-gradient(top,  #f8f8f8,  #dddddd);
    background: linear-gradient(top,  #f8f8f8,  #dddddd);
}

div.calendar-item:active {
    border: solid #b0b0b0 1px;

    background: #d0d0d0;
   	background: -webkit-gradient(linear, left top, left bottom, from(#cccccc), to(#e0e0e0));
    background: -webkit-linear-gradient(top,  #cccccc,  #e0e0e0);
    background: -moz-linear-gradient(top,  #cccccc,  #e0e0e0);
    background: -o-linear-gradient(top,  #cccccc,  #e0e0e0);
    background: -ms-linear-gradient(top,  #cccccc,  #e0e0e0);
    background: linear-gradient(top,  #cccccc,  #e0e0e0);
}

div.calendar-items {
    margin-left: auto;
    margin-right: auto;
    height: 130px;
}
